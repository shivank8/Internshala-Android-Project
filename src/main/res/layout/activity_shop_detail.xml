<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@color/whiteBack">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@color/green" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:src="@color/green"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:src="@color/green"
        android:layout_alignParentRight="true"/>



    <ImageView
        android:id="@+id/imgBottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="#ffff"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/imgProgress2"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_below="@id/imgTop"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/snprogress2" />

    <EditText
        android:id="@+id/etSname"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/imgProgress2"
        android:hint="Enter Shop Name*"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/etPincode"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@id/etSname"
        android:hint="Enter Shop Pin code*"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="20dp"/>


    <EditText
        android:id="@+id/etChooseLocation"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@id/etSname"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/etPincode"
        android:hint="Choose Location*"
        android:textColor="@color/blueButton" />

    <Button
        android:id="@+id/btnSLocationPicker2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@id/etSname"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/my_location"
        android:clickable="true" />

    <TextView
        android:id="@+id/txtUploadFront"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:text="Upload Front Image of shop*              "
        android:layout_below="@id/etPincode"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"
        android:textColor="#000000"
        android:paddingRight="4dp"
        android:paddingLeft="6dp"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/btnFrontImage"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="Choose File"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txtUploadFront"
        android:layout_below="@id/etChooseLocation"/>

    <TextView
        android:id="@+id/txtUploadBack"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:text="Upload Some Interior Image of shop*"
        android:layout_below="@id/txtUploadFront"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"
        android:textColor="#000000"
        android:paddingRight="4dp"
        android:paddingLeft="6dp"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/ntnInteriorImage"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@id/btnFrontImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/txtUploadBack"
        android:text="Choose File" />

    <Spinner
        android:id="@+id/sprShopcategory"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/txtUploadBack"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"/>
    <EditText
        android:id="@+id/etShopContactNo"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Shop Contact Number"
        android:layout_below="@id/sprShopcategory"/>

    <EditText
        android:id="@+id/etShopContactEmail"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Shop Contact Email Id"
        android:layout_below="@id/etShopContactNo"/>

    <EditText
        android:id="@+id/etGST"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="GST Number"
        android:layout_below="@id/etShopContactEmail"/>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etGST"
        android:layout_centerInParent="true"
        android:background="@color/green"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_above="@+id/imgBottom"
        android:src="@color/green" />


    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/img"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/imgdown"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>